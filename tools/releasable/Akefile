    for @tarball-distributors {
        run ‘scp’, $nqp-archive, “{$nqp-archive}.asc”, “$_/nqp/”
    }
    True
}

task ‘rakudo-upload’, { # Step ⓲ (rakudo release guide)
    for @tarball-distributors {
        run ‘scp’, $rakudo-archive, “{$rakudo-archive}.asc”, “$_/rakudo/”
    }
    True
}

